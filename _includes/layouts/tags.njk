---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---
<article class="blog-post">
  <h1>Tagged “{{ tag }}”</h1>

  {% set postslist = collections[ tag ] %}
  {% include "postslist.njk" %}

  <hr>

  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</article>
